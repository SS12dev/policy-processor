# ============================================================================
# Policy Document Processor Agent - Environment Configuration
# ============================================================================
# Copy this file to .env and configure your settings
# DO NOT commit .env to version control
# ============================================================================

# ===== Server Configuration =====
SERVER_HOST=0.0.0.0
SERVER_PORT=8001
SERVER_RELOAD=false
LOG_LEVEL=INFO

# ===== Agent Metadata =====
AGENT_NAME=Policy Document Processor Agent
AGENT_VERSION=4.0.0

# ===== Redis Configuration =====
# Redis is used for temporary storage of processing results (with TTL)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password_here  # Uncomment if Redis requires authentication
REDIS_RESULT_TTL_HOURS=24
REDIS_MAX_CONNECTIONS=10

# ===== LLM Provider Configuration =====
# Options: openai, azure, proxy, auto
LLM_PROVIDER=openai
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000
LLM_STREAMING=true
LLM_TIMEOUT=120
LLM_MAX_RETRIES=3

# ===== OpenAI Configuration =====
# Required if LLM_PROVIDER=openai or auto
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_PRIMARY=gpt-4o-mini
OPENAI_MODEL_SECONDARY=gpt-4o
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000
OPENAI_TIMEOUT=120
OPENAI_MAX_RETRIES=3

# ===== Azure OpenAI Configuration =====
# Required if LLM_PROVIDER=azure or auto
# AZURE_OPENAI_API_KEY=your_azure_openai_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_API_VERSION=2024-02-15-preview
# AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
# AZURE_OPENAI_DEPLOYMENT_SECONDARY=gpt-4o
# AZURE_OPENAI_MODEL=gpt-4o-mini
# AZURE_OPENAI_MODEL_SECONDARY=gpt-4o
# AZURE_OPENAI_MAX_TOKENS=4000

# ===== LiteLLM Proxy Configuration =====
# Required if LLM_PROVIDER=proxy
# LLM_API_KEY=your_proxy_api_key_here
# LLM_ENDPOINT=http://localhost:4000
# LLM_MODEL=gpt-4o-mini
# LLM_MODEL_SECONDARY=gpt-4o

# ===== Processing Configuration =====
MAX_FILE_SIZE_MB=50
MAX_FILE_SIZE_BYTES=52428800
DEFAULT_CONFIDENCE_THRESHOLD=0.7
ENABLE_STREAMING=true
STREAM_CHUNK_SIZE=1024

# ===== Processing Limits =====
MAX_PAGES_PER_DOCUMENT=500
MAX_POLICIES_PER_DOCUMENT=100
MAX_DECISION_TREES_PER_POLICY=10

# ===== Retry Configuration =====
MAX_RETRIES=3
RETRY_DELAY_SECONDS=2
RETRY_EXPONENTIAL_BACKOFF=true

# ===== Rate Limiting =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_BURST=20

# ===== Logging Configuration =====
LOG_FORMAT=json
LOG_FILE=logs/agent.log
LOG_ROTATION=10MB
LOG_RETENTION=30 days
LOG_COMPRESSION=true

# ===== Metrics Configuration =====
METRICS_ENABLED=true
METRICS_FILE=metrics/agent_metrics.json
METRICS_EXPORT_INTERVAL_SECONDS=60

# ===== A2A Protocol Configuration =====
A2A_STREAMING=true
A2A_MULTITURN=false
A2A_PUSH_NOTIFICATIONS=false
