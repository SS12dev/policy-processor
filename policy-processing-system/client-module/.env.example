# ============================================================================
# Policy Document Processor Client - Environment Configuration
# ============================================================================
# Copy this file to .env and configure your settings
# DO NOT commit .env to version control
# ============================================================================

# ===== A2A Agent Connection =====
AGENT_URL=http://localhost:8001
AGENT_TIMEOUT=300
AGENT_PREFER_STREAMING=true

# ===== Upload Configuration =====
MAX_UPLOAD_SIZE_MB=50
MAX_UPLOAD_SIZE_BYTES=52428800
ALLOWED_FILE_TYPES=pdf

# ===== UI Configuration =====
APP_TITLE=Policy Document Processor
APP_ICON=:page_facing_up:
PAGE_LAYOUT=wide
SIDEBAR_STATE=expanded

# ===== Database Configuration =====
DATABASE_URL=sqlite:///./data/policy_processor.db
DATABASE_ECHO=false

# ===== Processing Defaults =====
DEFAULT_USE_GPT4=false
DEFAULT_CONFIDENCE_THRESHOLD=0.7
DEFAULT_ENABLE_STREAMING=true

# ===== Display Configuration =====
SHOW_DEBUG_INFO=false
RESULTS_PER_PAGE=10
TREE_MAX_DEPTH=10
